</div>

<div id="editarUsuarioModal" class="modal hidden">
    <div class="modal-content">
        <span
            class="close"
            onclick="closeModal('editarUsuarioModal')"
        >&times;</span>
        <h2>Editar Usuario</h2>
        <form id="form-editar-usuario" method="POST">
            <label for="edit-username">Nombre:</label>
            <input type="text" name="username" id="edit-username" required />

            <label for="edit-email">Email:</label>
            <input type="email" name="email" id="edit-email" required />

            <label for="edit-rol">Rol:</label>
            <select name="rol" id="edit-rol" required>
                <option value="admin">Admin</option>
                <option value="user">Usuario</option>
            </select>

            <button type="submit" class="btn btn-save">Guardar Cambios</button>
        </form>
    </div>
</div>

<!-- Secci√≥n de Reservas -->
<button class="section-toggle-btn" onclick="toggleSection('reservas')">üìÖ
    Reservas</button>
<div class="section-content" id="reservas">
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Usuario</th>
                    <th>Estaci√≥n</th>
                    <th>Juego</th>
                    <th>Fecha y Hora</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each reservas}}
                    <tr>
                        <td>{{username}}</td>
                        <td>{{category}}, {{number}}</td>
                        <td>{{game}}</td>
                        <td>{{fecha}}, {{hora}}</td>
                        <td>
                            <form
                                action="/admin/delete/reserve/{{_id}}"
                                method="post"
                            >
                                <button
