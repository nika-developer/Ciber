<link rel="stylesheet" href="/css/admin-Dashboard.css" />

<div class="welcome-container text-center">
    <h1>Dashboard de Administradores</h1>
    <button onclick="logout()" class="neon-logout">Cerrar sesi√≥n</button>
</div>

<!-- Secci√≥n de Juegos -->
<button class="section-toggle-btn" onclick="toggleSection('juegos')">üéÆ Juegos</button>
<div class="section-content" id="juegos">
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Categor√≠a</th>
                    <th>Descripcion</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each juegos}}
                    <tr>
                        <td>{{nombre}}</td>
                        <td>{{genero}}</td>
                        <td>{{descripcion}}</td>
                        <td>
                            <img
                                src="{{imagen}}"
                                alt="{{nombre}}"
                                style="width: 80px; height: auto; object-fit: cover;"
                            />
                        </td>

                        <td>

                            <button
                                class="btn btn-edit"
                                onclick="abrirModalEditar('{{_id}}', '{{nombre}}', '{{genero}}', '{{descripcion}}', '{{imagen}}')"
                            >
                                Editar
                            </button>

                            <form
                                action="/admin/delete/game/{{_id}}"
                                method="post"
                            >
                                <button
                                    type="submit"
                                    class="btn btn-delete"
                                >Eliminar</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <button class="btn btn-add" onclick="openModal('crearJuegoModal')">Agregar
        Juego</button>
</div>

<div id="crearJuegoModal" class="modal hidden">
    <div class="modal-content">
        <span
            class="close"
            onclick="closeModal('crearJuegoModal')"
        >&times;</span>
        <h2>Crear Juego</h2>
        <form action="/admin/games/create" method="post">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" required />

            <label for="genero">G√©nero:</label>
            <input type="text" id="genero" name="genero" required />

            <label for="descripcion">Descripci√≥n:</label>
            <textarea id="descripcion" name="descripcion" required></textarea>

            <label for="imagen">Imagen (URL):</label>
            <input type="text" id="imagen" name="imagen" required />

            <button type="submit" class="btn btn-add">Guardar</button>
        </form>
    </div>
</div>

<!-- Secci√≥n de Estaciones -->
<button class="section-toggle-btn" onclick="toggleSection('estaciones')">üñ•Ô∏è
    Estaciones</button>
<div class="section-content" id="estaciones">
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>N√∫mero</th>
                    <th>Categor√≠a</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each estaciones}}
                    <tr>
                        <td>{{number}}</td>
                        <td>{{category}}</td>
                        <td>
                            <button
                                type="button"
                                class="btn btn-edit"
                                onclick="abrirModalEditarEstacion('{{_id}}', '{{number}}', '{{category}}')"
                            >
                                Editar
                            </button>
                            <form
                                action="/admin/delete/station/{{_id}}"
                                method="post"
                            >
                                <button
                                    type="submit"
                                    class="btn btn-delete"
                                >Eliminar</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <button
        type="button"
        class="btn btn-add"
        onclick="openModal('crearEstacionModal')"
    >Agregar Estaci√≥n</button>
</div>

<div id="crearEstacionModal" class="modal hidden">
    <div class="modal-content">
        <span
            class="close"
            onclick="closeModal('crearEstacionModal')"
        >&times;</span>
        <h2>Crear Estaci√≥n</h2>
        <form action="/admin/station/create" method="post">
            <label for="numero">N√∫mero de Estaci√≥n:</label>
            <input type="number" name="number" id="numero" required />

            <label for="categoria">Categor√≠a:</label>
            <input type="text" name="category" id="categoria" required />

            <button type="submit" class="btn btn-add">Guardar</button>
        </form>
    </div>
</div>

<div id="editarEstacionModal" class="modal hidden">
    <div class="modal-content">
        <span
            class="close"
            onclick="closeModal('editarEstacionModal')"
        >&times;</span>
        <h2>Editar Estaci√≥n</h2>
        <form id="form-editar-estacion" method="POST">
            <label for="edit-numero">N√∫mero de Estaci√≥n:</label>
            <input type="number" name="number" id="edit-numero" required />

            <label for="edit-categoria">Categor√≠a:</label>
            <input type="text" name="category" id="edit-categoria" required />

            <button type="submit" class="btn btn-save">Guardar Cambios</button>
        </form>
    </div>
</div>

<!-- Secci√≥n de Usuarios -->
<button class="section-toggle-btn" onclick="toggleSection('usuarios')">üë§
    Usuarios</button>
<div class="section-content" id="usuarios">
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each usuarios}}
